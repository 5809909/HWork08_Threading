<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.github.a5809909.hwork06_threading.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_Thread"
            android:onClick="onbtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_btn_thread"/>

        <TextView
            android:id="@+id/text_view_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_view_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onbtnClick"
            android:id="@+id/button_AsyncTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_btn_asynctask"/>

        <TextView
            android:id="@+id/text_view_asynctask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_view_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_ExecutorService"
            android:onClick="onbtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_btn_executor_service"/>

        <TextView
            android:id="@+id/text_view_executor_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_view_style"/>


    </LinearLayout>

</LinearLayout>